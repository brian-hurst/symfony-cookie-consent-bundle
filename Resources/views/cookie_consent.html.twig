{% form_theme form '@FNCookieConsent/form/cookie_consent_theme.html.twig' %}

{% block script %}
    <script type="text/javascript" src="{{ asset('bundles/fncookieconsent/js/cookie_consent.js') }}"></script>
{% endblock %}

<div class="fn-cookie-consent fn-cookie-consent--{{ theme }}-theme fn-cookie-consent--{{ position }}">
    {% block title %}
        <h3 class="fn-cookie-consent__title">{{ 'fn_cookie_consent.title'|trans({}, 'FNCookieConsentBundle') }}</h3>
    {% endblock %}

    {% block intro %}
        <p class="fn-cookie-consent__intro">{{ 'fn_cookie_consent.intro'|trans({}, 'FNCookieConsentBundle') }}</p>
    {% endblock %}

    {% block read_more %}
        <a class="fn-cookie-consent__read-more" href="{% block read_more_link %}/privacy-statement{% endblock %}">{{ 'fn_cookie_consent.read_more'|trans({}, 'FNCookieConsentBundle') }}</a>
    {% endblock %}

    {{ form_start(form, {'attr': {'class': 'fn-cookie-consent__form'}}) }}
        <div class="fn-cookie-consent__category-group">
            {% for child in form %}
                {% if child.vars.block_prefixes[0] != 'button' %}
                    {{ form_row(child) }}
                {% endif %}
            {% endfor %}
        </div>

        <div class="fn-cookie-consent__btn-group">
            {{ form_rest(form) }}
        </div>
    {{ form_end(form) }}
</div>

